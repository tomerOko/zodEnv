{// ! important ! => every change made here might be nedded in the tsconfig.spec.json as well
    "compilerOptions": {
      "rootDir": "src",
      "target": "es5",
      "module": "commonjs",
      "outDir": "lib",
      "declaration": true,  // to publish as a package
      // "declarationMap": true, // to publish as a package
      // "sourceMap": true, // to publish as a package
      "resolveJsonModule": true,//needed for this repo
      "esModuleInterop": true,//needed for this repo
      "strict": true //needed for this repo
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      // "node_modules" //??
    ]
}